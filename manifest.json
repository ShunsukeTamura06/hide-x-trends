{
    "manifest_version": 3,
    "name": "Hide X Trends",
    "version": "1.0",
    "description": "A Chrome extension that hides trends and recommended users on X (formerly Twitter)",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*",
                "*://*.x.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}